@page "/documents/{id:guid}"
@attribute [StreamRendering]
@rendermode InteractiveServer

<PageTitle>Документ</PageTitle>

<h1>Документ</h1>

<div class="mb-3">
    <a class="btn btn-secondary btn-sm" href="/children">
        ← Назад до списку дітей
    </a>
</div>

<div class="border rounded" style="height: 700px; overflow: hidden;">
    <iframe src="@PdfUrl"
            width="100%"
            height="100%"
            style="border: none;">
    </iframe>
</div>

@code {
    // Параметр id нам тут поки не потрібен, але лишаємо –
    // щоб посилання /documents/{docId} працювало
    [Parameter] public Guid Id { get; set; }

    // Просто віддаємо один конкретний PDF з wwwroot
    // Заміни ім'я файлу на свій
    private string PdfUrl => "/docs/КМД_ІСТ_КПІ_2025_Вронський В.В..pdf";
}
